{
	"manifest_version": 2,

	"name": "Org Header for SalesforceÂ®",
	"short_name": "Org Header",
	"description": "Quickly distinguish which sandbox you're working in by setting up a distinctive header for each.",
	"version": "1.0.1",
	"author": "Ben Burwell",

	"icons": {
		"16": "icon-sm-16.png",
		"32": "icon-sm-32.png",
		"48": "icon-md-48.png",
		"128": "icon-lg-128.png"
	},

	"content_scripts": [
		{
			"matches": [
				"*://*.salesforce.com/*",
				"*://*.visual.force.com/*",
				"*://*.lightning.force.com/*"
			],
			"js": [ "content.js" ],
			"all_frames": false,
			"run_at": "document_start"
		}
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"permissions": [
		"storage",
		"https://*.salesforce.com/"
	]
}
